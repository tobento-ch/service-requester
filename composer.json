{
    "name": "tobento/service-requester",
    "type": "library",
    "description": "A PSR-7 server request wrapper class providing simplified methods.",
    "keywords": [
        "tobento",
        "package",
        "PHP",
        "PSR-7 server request"
	],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "psr/http-message": "^1.0",
        "tobento/service-collection": "^1.0"
    },  
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "nyholm/psr7": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\Requester\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\Requester\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}
